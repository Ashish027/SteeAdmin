<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="c.gla.admin">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NewsDelActivity"
            android:parentActivityName=".NewsMenu"></activity>
        <activity android:name=".NewsMenu"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".DonationDelActivity"
            android:parentActivityName=".DonationMenu"/>
        <activity android:name=".DonationMenu"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".VolunteerdelActivity"
            android:parentActivityName=".VolunteerMenu"/>
        <activity android:name=".VolunteerMenu"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".PostDelActivity"
            android:parentActivityName=".PostMenu"/>
        <activity android:name=".PostMenu"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".EventDelActivity"
            android:parentActivityName=".EventMenu"/>
        <activity android:name=".EventMenu"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".NewsActivity"
            android:parentActivityName=".NewsMenu"/>
        <activity android:name=".AboutusActivity" />
        <activity android:name=".DonationActivity"
            android:parentActivityName=".DonationMenu"/>
        <activity android:name=".VolunteerActivity"
            android:parentActivityName=".VolunteerMenu"/>
        <activity android:name=".PostActivity"
            android:parentActivityName=".PostMenu"/>
        <activity android:name=".EventActivity"
            android:parentActivityName=".EventMenu"/>
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"

            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>